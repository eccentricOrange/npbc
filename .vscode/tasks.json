{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "linux": {
                "command": "./compile.sh ${input:compile_commit}"
            },
            "windows": {
                "command": "& npbc-env/scripts/activate.ps1; ./compile.bat ${input:compile_commit}"
            },
            "problemMatcher": []
        }
    ],

    "inputs": [
        {
            "id": "compile_commit",
            "type": "promptString",
            "description": "Commit message"
        }
    ]
}